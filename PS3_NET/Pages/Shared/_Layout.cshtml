<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PS3_NET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .footer 
        {
             position: fixed;
             left: 0;
             bottom: 0;
             width: 100%;
             background-color: #414141;
             color: #b1b1b1;
             text-align: end;
        }
        .header
        {
            padding: 5px;
            text-align: center;
            background: #414141;
            color: white;
            font-size: 15px;
            text-align: start;
        }
        button {
            background-color: #414141;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }
        p {
            color: white;
            font-weight: bold;
            font-size: 16px;
        }
        h1 
        {   
            color: white;
            font-weight: bold;
            font-size: 32px;
            text-align: center;
        }
        body
        {
            background-color: #b1b1b1;
            color:#ffffff
        }
        a:visited 
        {
            color:white;
        }
        a:link 
        {
            color:white;
        }
        a:hover
        {
            color:white;
        }
    </style>

</head>
<body>
    <div class="header">
        &emsp; PS4
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer ">
        Paweł Niewęgłowski &emsp;
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
